<div class="top_bar">
  <%= render partial: 'shared/menu', locals: { title: 'ADD EXPENSE', menu_path: root_path } %>
</div>

<section class="edit_add_page group">
  <%= form_with model: @expense, url: group_expenses_path(group_id: @group.id), local: true do |f| %>
    <%= f.text_field :name, autofocus: true, placeholder: "Expense name"  %>
    <%= f.number_field :amount, placeholder: "Expense amount"  %>
    <%= f.file_field :icon %>
    <div class="form_btn">
      <%= f.submit "Save", class: 'list_btn' %>
      <button class="list_btn"><%= link_to "Back", group_expenses_path(group_id: @group.id) %></button>
    </div>
  <% end %>
</section>

